<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- appender配置 -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d][%t][%p][%c:%L] %m%n" />
        </Console>
        <RollingFile name="DailyRollingFile" fileName="log/log.log"
            filePattern="log/%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="[%d][%t][%p][%c:%L] %m%n" />
            <TimeBasedTriggeringPolicy  interval="1"/>
　　　　　　　<SizeBasedTriggeringPolicy size="10MB" /> 

        </RollingFile>
    </Appenders>
    <Loggers>
 　　　　<Logger name="com.wmq.dailyRollingFile" level="info" additivity="false">
 　　　　　　<AppenderRef ref="DailyRollingFile" />  
 　　　　</Logger>  
       
       <Logger name="com.wmq.console" level="info" additivity="false">
          <AppenderRef ref="Console"></AppenderRef>
       </Logger>
       
        <Root level="DEBUG">
            
            <AppenderRef ref="Console" />
            
            <AppenderRef ref="DailyRollingFile"/>
        </Root>
    </Loggers>
</Configuration>